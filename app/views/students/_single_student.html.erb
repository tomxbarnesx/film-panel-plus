<h1><%= @student.user.first_name %> <%= @student.user.last_name %></h1>
<p><strong>User Type:</strong> <%= @student.user.userable_type %></p>
<p><strong>Birthdate:</strong> <%= @student.user.birthdate %></p>
<p><strong>Background:</strong> <%= @student.background %></p>
<p><strong>Email:</strong> <%= @student.user.email %></p>
<table>
    <tr>
        <th>Cohorts</th>
        <th colspan="3">Options</th>
    </tr>
    <% @student.user.enrollments.each do |e| %>
    <tr>
            <td><%= e.cohort.name %></td>
            <td><%= link_to 'Show', cohort_enrollment_path(e.cohort.id, e.id) %></td>
            <td><%= link_to 'Edit', edit_cohort_enrollment_path(e.cohort.id, e.id) %></td>
            <td><%= link_to 'Destroy', cohort_enrollment_path(e.cohort.id, e.id),
            method: :delete,
            data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
</table>