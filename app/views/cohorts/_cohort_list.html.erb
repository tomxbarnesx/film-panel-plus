<% @cohorts.each do |coho| %>
    <tr id="cohort-<%= coho.id %>">
        <td class="first-column"><%= coho.name %></td>
        <td><%= coho.course.name %></td>
        <td><%= coho.start_date %></td>
        <td><%= coho.end_date %></td>
        <td><%= coho.enrollments.length %></td>
        <td><%= link_to 'View', cohort_path(coho) %></td>
        <% if has_role?("Admin") %>
        <td><%= link_to 'Edit', edit_cohort_path(coho) %></td>
        <td><%= link_to 'Destroy', cohort_path(coho),
              method: :delete, remote:true,
              data: { confirm: 'Are you sure?' } %></td>
        <% end %>
    </tr>
<% end %>