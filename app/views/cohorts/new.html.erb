<% if has_role?("Student") || has_role?("Instructor") %>
    <h1>You don't have the authorization to access this page...</h1>
<% end %>
<% if has_role?("Admin") %>
<h1>Create New Cohort</h1>
<br>
<%= form_with scope: :cohort, url: cohorts_path, local: true do |f| %>
    <div class="form-group">
        <%= f.label :name %><br>
        <%= f.text_field :name, placeholder: "Enter Name", class: "form-control"%>
    </div>
    <div class="form-group">
        <label>Start Date</label>
        <%= date_field(:cohort, :start_date, class: "form-control") %>
    </div>
    <div class="form-group">
        <label>End Date</label>
        <%= date_field(:cohort, :end_date, class: "form-control") %>
    </div>
    <div class="form-group">
        <label>Course</label>
        <%= collection_select(:cohort, :course_id, Course.all, :id, :name, {}, {:class=>'form-control'}) %>
    </div>
    <%= f.button :Submit, class: 'btn btn-primary submit-button' %>
<% end %>
<% end %>